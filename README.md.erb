<%
  def without_comments(string)
    stripped = string.lines.reject { |line| line =~ /\s*\/\// }.join
    IO.popen("rustfmt", "w+") do |pipe|
      pipe.puts stripped
      pipe.close_write
      pipe.read.strip
    end
  end
%>
